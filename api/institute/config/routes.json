{
  "routes": [
    {
      "method": "GET",
      "path": "/institutes",
      "handler": "institute.find",
      "config": {
        "policies": ["global::has-apikey"]
      }
    },
    {
      "method": "GET",
      "path": "/institutes/count",
      "handler": "institute.count",
      "config": {
        "policies": ["global::has-apikey"]
      }
    },
    {
      "method": "GET",
      "path": "/institutes/:id",
      "handler": "institute.findOne",
      "config": {
        "policies": ["global::has-apikey"]
      }
    },
    {
      "method": "POST",
      "path": "/institutes",
      "handler": "institute.create",
      "config": {
        "policies": ["global::has-apikey"]
      }
    },
    {
      "method": "PUT",
      "path": "/institutes/:id",
      "handler": "institute.update",
      "config": {
        "policies": ["global::has-apikey"]
      }
    },
    {
      "method": "DELETE",
      "path": "/institutes/:id",
      "handler": "institute.delete",
      "config": {
        "policies": ["global::has-apikey"]
      }
    }
  ]
}
